
@model QuizApplication.Models.Questions

@{
    Layout = "_Layout";
}


<div class="card">
    <div class="row">
        <div class="column">
            <h2><b>Question</b></h2>
            <form asp-action="ListQuestion_Editclick" class="form-horizontal" method="post">
                <table>
              
                        <tr>
                            <td colspan="2">
                                <div class="form-group">
                                    <label class="control-label">Question</label>
                                    <input asp-for="QuestionText" class="form-control" style="width:800px" />
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <div class="form-group">
                                    <label class="control-label">Option A</label>
                                    <input asp-for="Ques_OPA" class="form-control custom-input" />
                                </div>
                            </td>
                            <td>
                                <div class="form-group">
                                    <label class="control-label">Option B</label>
                                    <input asp-for="Ques_OPB" class="form-control custom-input" />
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <div class="form-group">
                                    <label class="control-label">Option C</label>
                                    <input asp-for="Ques_OPC" class="form-control custom-input" />
                                </div>
                            </td>
                            <td>
                                <div class="form-group">
                                    <label class="control-label">Option D</label>
                                    <input asp-for="Ques_OPD" class="form-control custom-input" />
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td colspan="2">
                                <div class="form-group">
                                    <label class="control-label">Correct Option </label>
                                    <input asp-for="Correct_OP" class="form-control" style="width:800px" />
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td colspan="2">
                                <div class="form-group">
                                    <input type="submit" value="Update" class="btn btn-success" style="width:800px" />
                                </div>
                            </td>
                        </tr>
        
                </table>
            </form>
        </div>
    </div>
</div>


<style>
    .custom-input {
        width: 400px;
    }

    body {
        background-color: cadetblue;
    }

    .card {
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
        transition: 0.3s;
        width: fit-content;
        height: auto;
        margin: 5% auto;
        background-color: white;
        padding: 20px;
        border-radius: 10px;
        box-sizing: border-box;
    }

        .card:hover {
            box-shadow: 0 8px 16px 0 rgba(0, 0, 0, 0.2);
        }

    .column {
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 20px;
    }
</style>
@{
    if (@TempData["msg"] != null)
    {
        <script>
            alert('@TempData["msg"]')
        </script>
    }
}