@model QuizApplication.Models.Login
@{
    Layout = "_Layout";
}



<div class="card">
    <div class="row">
        <div class="column">
            <h2 style="color:white"><b>Login</b></h2>
            <form asp-action="Login_Click" class="form-horizontal" method="get">

                <div class="form-group">
                    <label class="control-label" style="color:white">Username</label>
                    <input asp-for="Username" class="form-control custom-input" />
                </div>
                <div class="form-group">
                    <label class="control-label" style="color:white">Password</label>
                    <input asp-for="Password" class="form-control custom-input" />
                </div>

                <div class="form-group">
                    <input type="submit" value="Login" class="btn btn-primary custom-input" />
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .custom-input {
        width: 400px;
    }

    body {
        background-image: url('/homepageimage/qqq9.jpg');
       background-size: cover; 
        background-position: center;
        background-repeat: no-repeat;
          
    }

    .card {
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
        transition: 0.3s;
        width: fit-content;
        height: auto;
        margin: 5% auto;
        background-color: transparent;
        box-shadow: 20px 20px 50px white;
        padding: 20px;
        border-radius: 10px;
        box-sizing: border-box;
    }

        .card:hover {
            box-shadow: 20px 20px 50px LightYellow;
            /* box-shadow: 0 8px 16px 0 rgba(0, 0, 0, 0.2); */
        }

    .column {
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 20px;
    }
</style>
@{
    if (@TempData["msg"] != null)
    {
        <script>
            alert('@TempData["msg"]')
        </script>
    }
}